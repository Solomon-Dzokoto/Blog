// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(MEMBER)
  posts     Post[]
  sessions  Session[]
  createdAt DateTime @default(now())
}

// Post model
model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  imageUrl  String?
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

// Session model for handling user sessions and logout
model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique // The refresh token
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// Role enum
enum Role {
  ADMIN
  MEMBER
}
